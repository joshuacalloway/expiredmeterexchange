<%= form_for([:admin, @ticket]) do |f| %>
<table>
  <thead>
    <tr>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= f.label :email %></th>
      <td><%= f.text_field :email %></td>
    <tr>
      <th><%= f.label :cell_number %> (optional)</th>
      <td><%= f.text_field :cell_number %></td>
    <tr>
      <th><%= f.label :rate %></th>
      <td><%= f.select(:rate, options_for_select([['$1.75',1.75],['$3.50',3.5],['$5.75',5.75]])) %></td>
    </tr>
    <tr>
      <th><%= f.label :amount %></th>
      <td>$<%= f.number_field :amount, :step=>5, :min=>50, :max=>150.00 %></td>
    </tr>

    <tr>
      <th><%= f.label :ticket_time %></th>
      <td><%= f.datetime_select :ticket_time %></td>
    <tr>
      <th>
  <div class="actions">
    <%= f.submit %>
  </div>
  </tbody>
  </table>
<% end %>
